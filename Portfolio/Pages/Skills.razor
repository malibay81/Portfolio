@page "/skills"

<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Technical Skills</h1>
            <p class="text-lg text-gray-600">Expertise across various technologies and tools</p>
        </div>

        @foreach (var category in skillCategories)
        {
            <div class="mb-12">
                <h2 class="text-2xl font-semibold text-gray-800 mb-6">@category.Name</h2>
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                    @foreach (var skill in category.Skills)
                    {
                        <div class="bg-white rounded-lg shadow-md p-4 transform hover:scale-105 transition-transform duration-200 hover:shadow-lg">
                            <div class="flex items-center space-x-3">
                                <i class="@skill.IconClass text-xl text-blue-500"></i>
                                <div>
                                    <h3 class="text-lg font-medium text-gray-900">@skill.Name</h3>
                                    <div class="mt-1 flex items-center">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < skill.ProficiencyLevel)
                                            {
                                                <i class="fas fa-circle text-blue-500 text-xs mr-1"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-circle text-gray-300 text-xs mr-1"></i>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

