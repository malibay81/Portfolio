@page "/"
@using Portfolio.Components
@inject IJSRuntime JSRuntime

<div class="hero min-h-screen" id="home">
    <div class="hero-content text-center">
        <div class="max-w-lg">
            <h1 class="text-5xl font-bold animate__animated animate__fadeInDown">Hello, I'm <span
                    class="text-primary">Your Name</span></h1>
            <p class="py-6 animate__animated animate__fadeInUp">Software Developer specializing in .NET and Blazor
                applications</p>
            <button class="btn btn-primary animate__animated animate__fadeInUp" @onclick="ScrollToProjects">View My
                Work</button>
        </div>
    </div>
</div>

<AboutSection />
<ProjectsSection />
<SkillsSection />
<ContactSection />

@code
{
    private async Task ScrollToProjects()
    {
        await JSRuntime.InvokeVoidAsync("scrollToElement", "projects");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initializeAnimations");
        }
    }
}

                   
               
               
