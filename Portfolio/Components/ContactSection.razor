            <div class="md:w-1/2" data-aos="fade-left">
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h3 class="card-title">Send Me a Message</h3>
                        <EditForm Model="@contactForm" OnValidSubmit="@HandleSubmit">
                            <DataAnnotationsValidator />

                            <div class="form-control mt-4">
                                <label class="label">
                                    <span class="label-text">Your Name</span>
                                </label>
                                <InputText @bind-Value="contactForm.Name" class="input input-bordered w-full" />
                                <ValidationMessage For="@(() => contactForm.Name)" />
                            </div>

                            <div class="form-control mt-4">
                                <label class="label">
                                    <span class="label-text">Your Email</span>
                                </label>
                                <InputText @bind-Value="contactForm.Email" class="input input-bordered w-full" />
                                <ValidationMessage For="@(() => contactForm.Email)" />
                            </div>

                            <div class="form-control mt-4">
                                <label class="label">
                                    <span class="label-text">Message</span>
                                </label>
                                <InputTextArea @bind-Value="contactForm.Message"
                                class="textarea textarea-bordered h-32" />
                                <ValidationMessage For="@(() => contactForm.Message)" />
                            </div>

                            <div class="form-control mt-6">
                                <button type="submit" class="btn btn-primary">Send Message</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code
{
    private ContactForm contactForm = new();

    private async Task HandleSubmit()
    {
        await Task.CompletedTask;

        // In a real app, you would send this data to a server or API
        // Since this is for GitHub Pages (static hosting), you could use a service like Formspree
        Console.WriteLine($"Name: {contactForm.Name}");
        Console.WriteLine($"Email: {contactForm.Email}");
        Console.WriteLine($"Message: {contactForm.Message}");

        // Clear form after submission
        contactForm = new();
    }

    public class ContactForm
    {
        [Required]
        public string Name { get; set; } = "";

        [Required]
        [EmailAddress]
        public string Email { get; set; } = "";

        [Required]
        [MinLength(10)]
        public string Message { get; set; } = "";
    }
}