<section id="skills" class="py-10 bg-base-200">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold mb-8 text-center" data-aos="fade-up">My Skills</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="card bg-base-100 shadow-xl" data-aos="fade-up" data-aos-delay="100">
                <div class="card-body">
                    <h3 class="card-title">Frontend</h3>
                    <div class="space-y-4 mt-4">
                        @foreach (var skill in FrontendSkills)
                        {
                            <div>
                                <div class="flex justify-between mb-1">
                                    <span>@skill.Name</span>
                                    <span>@skill.Proficiency%</span>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2.5">
                                    <div class="bg-primary h-2.5 rounded-full" style="width: @(skill.Proficiency)%"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="card bg-base-100 shadow-xl" data-aos="fade-up" data-aos-delay="200">
                <div class="card-body">
                    <h3 class="card-title">Backend</h3>
                    <div class="space-y-4 mt-4">
                        @foreach (var skill in BackendSkills)
                        {
                            <div>
                                <div class="flex justify-between mb-1">
                                    <span>@skill.Name</span>
                                    <span>@skill.Proficiency%</span>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2.5">
                                    <div class="bg-primary h-2.5 rounded-full" style="width: @(skill.Proficiency)%"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="card bg-base-100 shadow-xl" data-aos="fade-up" data-aos-delay="300">
                <div class="card-body">
                    <h3 class="card-title">Other Skills</h3>
                    <div class="space-y-4 mt-4">
                        @foreach (var skill in OtherSkills)
                        {
                            <div>
                                <div class="flex justify-between mb-1">
                                    <span>@skill.Name</span>
                                    <span>@skill.Proficiency%</span>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2.5">
                                    <div class="bg-primary h-2.5 rounded-full" style="width: @(skill.Proficiency)%"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code
{
    private List<Skill> FrontendSkills { get; set; } = new List<Skill>
{
new Skill { Name = "HTML/CSS", Proficiency = 90 },
new Skill { Name = "JavaScript", Proficiency = 85 },
new Skill { Name = "Blazor", Proficiency = 95 },
new Skill { Name = "Responsive Design", Proficiency = 90 }
};

    private List<Skill> BackendSkills { get; set; } = new List<Skill>
{
new Skill { Name = "C#", Proficiency = 95 },
new Skill { Name = ".NET", Proficiency = 90 },
new Skill { Name = "ASP.NET Core", Proficiency = 85 },
new Skill { Name = "SQL", Proficiency = 80 }
};

    private List<Skill> OtherSkills { get; set; } = new List<Skill>
{
new Skill { Name = "Git/GitHub", Proficiency = 90 },
new Skill { Name = "CI/CD", Proficiency = 75 },
new Skill { Name = "Docker", Proficiency = 70 },
new Skill { Name = "Azure", Proficiency = 75 }
};

    public class Skill
    {
        public string Name { get; set; } = "";
        public int Proficiency { get; set; }
    }
}

