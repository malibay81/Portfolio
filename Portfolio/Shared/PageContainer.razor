<div class="page-container">
    @ChildContent
</div>

<style>
    .page-container {
        animation: fadeIn 0.3s ease-out;
    }

    @@keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(10px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@code
{
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}


